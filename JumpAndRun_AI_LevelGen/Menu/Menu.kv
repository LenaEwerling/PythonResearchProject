<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 5

        Label: 
            text: 'Welcome to Jumpi!\nPress start to begin'
            font_size: 20
            size_hint_y: 0.1

        Label: 
            id: stats_label
            text: "Statistics are loaded..."
            font_size:15
            size_hint_y: 0.3

        Widget:
            id: chart_placeholder
            size_hint_y: 0.5
            size: 400, 300
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1  # Gr√ºner Hintergrund zum Testen
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            text: "Start"
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.5}
            on_press: root.start_game()